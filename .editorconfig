# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = spaces
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.json,*.yml,*.yaml,*.md}]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false
